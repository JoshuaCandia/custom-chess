generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(uuid())
  username     String   @unique
  email        String?  @unique
  googleId     String?  @unique
  passwordHash String?
  theme        String   @default("classic")
  elo          Int      @default(1200)
  createdAt    DateTime @default(now())

  gamesAsWhite   Game[]          @relation("WhitePlayer")
  gamesAsBlack   Game[]          @relation("BlackPlayer")
  puzzleAttempts PuzzleAttempt[]
}

model Puzzle {
  id       String          @id
  fen      String
  moves    String
  rating   Int
  themes   String
  attempts PuzzleAttempt[]
}

model PuzzleAttempt {
  id        String   @id @default(uuid())
  userId    String
  puzzleId  String
  solved    Boolean
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId],   references: [id])
  puzzle Puzzle @relation(fields: [puzzleId], references: [id])

  @@unique([userId, puzzleId])
}

model Game {
  id          String   @id @default(uuid())
  roomId      String
  whiteId     String?
  blackId     String?
  result      String // "white" | "black" | "draw"
  reason      String // "checkmate" | "timeout" | "stalemate" | "draw"
  timeControl Int?
  moveCount   Int      @default(0)
  playedAt    DateTime @default(now())

  white User? @relation("WhitePlayer", fields: [whiteId], references: [id])
  black User? @relation("BlackPlayer", fields: [blackId], references: [id])
}
